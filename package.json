{
  "name": "@kriszu/eslint-config-monorepo",
  "type": "module",
  "version": "4.0.0",
  "private": true,
  "author": "Kriszu <wangsizhu0504@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "stub": "pnpm -r --parallel run stub",
    "lint": "eslint .",
    "release": "npm run build && bumpp -r && pnpm -r publish"
  },
  "devDependencies": {
    "@eslint/config-inspector": "catalog:dev",
    "@kriszu/eslint-config": "workspace:*",
    "@types/node": "catalog:dev",
    "bumpp": "catalog:dev",
    "esno": "catalog:dev",
    "execa": "catalog:dev",
    "jiti": "catalog:dev",
    "lint-staged": "catalog:dev",
    "pnpm-workspace-yaml": "catalog:dev",
    "simple-git-hooks": "catalog:dev",
    "tinyglobby": "catalog:dev",
    "tsdown": "catalog:dev",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest": "catalog:dev"
  },
  "resolutions": {
    "eslint": "catalog:peer"
  }
}
