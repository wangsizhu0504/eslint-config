{
  "name": "@kriszu/eslint-config-monorepo",
  "type": "module",
  "version": "5.0.5",
  "private": true,
  "packageManager": "pnpm@10.30.2",
  "author": "Kriszu <wangsizhu0504@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "stub": "pnpm -r --parallel run stub",
    "typecheck": "pnpm -r --parallel run typecheck",
    "lint": "eslint .",
    "test": "vitest",
    "prepare": "simple-git-hooks",
    "release": "npm run build && bumpp -r"
  },
  "devDependencies": {
    "@eslint/config-inspector": "catalog:dev",
    "@kriszu/eslint-config": "workspace:*",
    "@types/node": "catalog:dev",
    "@vitest/ui": "catalog:dev",
    "bumpp": "catalog:dev",
    "execa": "catalog:dev",
    "jiti": "catalog:dev",
    "lint-staged": "catalog:dev",
    "pnpm-workspace-yaml": "catalog:dev",
    "simple-git-hooks": "catalog:dev",
    "tinyglobby": "catalog:dev",
    "tsdown": "catalog:dev",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest": "catalog:dev"
  },
  "resolutions": {
    "@eslint-community/eslint-utils": "catalog:peer",
    "@typescript-eslint/types": "catalog:peer",
    "@typescript-eslint/utils": "catalog:peer",
    "chokidar": "catalog:dev",
    "eslint": "catalog:peer",
    "semver": "catalog:dev",
    "synckit": "catalog:dev",
    "tsx": "catalog:dev"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
